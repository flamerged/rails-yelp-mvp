<div class="container">
<h1><%= @restaurant.name %></h1>

<p>Address: <%= @restaurant.address %></p>
<p>Phone number: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category %></p>
<h2>Reviews: </h2>
<% @restaurant.reviews.each  do |review| %>
  <div class="review">
    <p>Rating: <%= "â­‘" * review.rating %></p>
    <p><%= review.content %></p>
    <%= link_to "Show review", restaurant_review_path(@restaurant, review) %>
  </div>
<% end %>
<h3>Add new review:</h3>
<%= simple_form_for([@restaurant,Review.new]) do |f| %>
    <%= f.input :rating, as: :integer, collection: 0..5 %>
    <%= f.input :content, as: :text%>
    <%= f.submit class: "btn btn-primary" %>
<% end %>

<%= link_to "Edit details", edit_restaurant_path(@restaurant) %>
<%= link_to "Delete restaurant", restaurant_path(@restaurant), method: "delete"%>
<%= link_to "Back to restaurant list", restaurants_path %>
</div>
